<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <com.eihror.awesomespinner.AwesomeSpinner
      android:id="@+id/spinner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="30dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:as_borderRadius="8dp"
      app:as_borderStroke="1dp"
      app:as_dropDownView="@layout/item_spinner_dropdown"
      app:as_hintText="@string/app_name"
      app:as_hintView="@layout/item_spinner"
      app:as_paddingBottom="15dp"
      app:as_paddingEnd="21dp"
      app:as_paddingStart="21dp"
      app:as_paddingTop="15dp"
      app:as_textSize="14sp"
      />

  <com.eihror.awesomespinner.AwesomeSpinner
      android:id="@+id/spinner2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="30dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/spinner"
      app:as_borderRadius="8dp"
      app:as_borderStroke="1dp"
      app:as_dropDownView="@layout/item_spinner_dropdown"
      app:as_hintText="@string/app_name"
      app:as_hintView="@layout/item_spinner"
      app:as_paddingBottom="15dp"
      app:as_paddingEnd="21dp"
      app:as_paddingStart="21dp"
      app:as_paddingTop="15dp"
      app:as_textSize="14sp"
      />

  <com.eihror.awesomespinner.AwesomeSpinner
      android:id="@+id/spinner3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="30dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/spinner2"
      app:as_borderRadius="8dp"
      app:as_borderStroke="1dp"
      app:as_dropDownView="@layout/item_spinner_dropdown"
      app:as_hintText="@string/app_name"
      app:as_hintView="@layout/item_spinner"
      app:as_justify="false"
      app:as_paddingBottom="15dp"
      app:as_paddingEnd="21dp"
      app:as_paddingStart="21dp"
      app:as_paddingTop="15dp"
      app:as_textSize="14sp"
      />

  <Button
      android:id="@+id/button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="30dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="20dp"
      android:text="VALIDAR"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/spinner3"
      />

</androidx.constraintlayout.widget.ConstraintLayout>